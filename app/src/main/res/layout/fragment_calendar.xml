<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainbackground"
    android:id="@+id/frame_layout"
    tools:context=".CalendarFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="15dp"
        android:textColor="#007ca5"
        android:textAlignment="center"
        android:background="@color/white" />

    <TextView
        android:id="@+id/calendar_text"
        android:layout_width="300dp"
        android:layout_height="25dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="105dp"
        android:text="@string/calendar"
        android:textAlignment="center" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="0dp"

        android:background="@drawable/logo" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/date_dropdown"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:hint="@string/choose_a_date"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="200dp"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/calendar_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:startIconDrawable="@drawable/ic_outline_calendar_today_24">
        <AutoCompleteTextView
            android:id="@+id/autocomplete_text_view_date_dropdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"

            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/time_dropdown"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:hint="@string/choose_a_time"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="300dp"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/calendar_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:startIconDrawable="@drawable/ic_baseline_access_time_24">
        <AutoCompleteTextView
            android:id="@+id/autocomplete_text_view_time_dropdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"

            />

    </com.google.android.material.textfield.TextInputLayout>

</FrameLayout>
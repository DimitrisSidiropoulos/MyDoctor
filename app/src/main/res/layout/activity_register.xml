<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainbackground"
    tools:context=".RegisterActivity">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="97dp"
        android:id="@+id/imageViewProfile"
        android:src="@drawable/profilelogo"
        android:layout_gravity="left" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="50dp"
        android:padding="20dp"
        android:text="@string/please_fill_your_personal_data_below"
        android:textSize="20dp" />

    <ScrollView
        android:id="@+id/ScrollView"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="170dp"
        android:layout_marginEnd="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">


            <EditText
                android:id="@+id/amkaRegisterText"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="#F0F8FF"
                android:drawableLeft="@drawable/ic_outline_email_24"
                android:drawablePadding="20dp"
                android:hint="@string/amka"
                android:inputType="number"
                android:padding="20dp" />

            <EditText
                android:id="@+id/passwordRegisterText"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/amkaRegisterText"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="#F0F8FF"
                android:drawableLeft="@drawable/ic_outline_lock_24"
                android:drawablePadding="20dp"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:padding="20dp"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/firstNameRegisterText"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/passwordRegisterText"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="#F0F8FF"
                android:drawableLeft="@drawable/ic_outline_account_circle_24"
                android:drawablePadding="20dp"
                android:hint="@string/first_name"
                android:padding="20dp"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/lastNameRegisterText"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/firstNameRegisterText"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="#F0F8FF"
                android:drawableLeft="@drawable/ic_outline_account_circle_24"
                android:drawablePadding="20dp"
                android:hint="@string/last_name"
                android:padding="20dp" />

            <EditText
                android:id="@+id/emailRegisterText"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lastNameRegisterText"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="#F0F8FF"
                android:drawableLeft="@drawable/ic_outline_email_24"
                android:drawablePadding="20dp"
                android:hint="@string/email"
                android:padding="20dp" />

            <EditText
                android:id="@+id/sexRegisterText"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bloodTypeRegisterText"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="#F0F8FF"
                android:drawablePadding="20dp"
                android:hint="@string/gender"
                android:padding="20dp" />

            <EditText
                android:id="@+id/bloodTypeRegisterText"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sexRegisterText"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="#F0F8FF"
                android:drawablePadding="20dp"
                android:hint="@string/blood_type"
                android:padding="20dp" />

            <EditText
                android:id="@+id/personalDoctorRegisterText"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/emailRegisterText"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="#F0F8FF"
                android:drawablePadding="20dp"
                android:hint="@string/personal_doctor"
                android:padding="20dp" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/registerButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/personalDoctorRegisterText"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="#5d8aa6"
                android:text="@string/register" />


        </LinearLayout>

    </ScrollView>


</RelativeLayout>